<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MyWordsServlet</servlet-name>
        <servlet-class>Controller.MyWordsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>Controller.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteWordServlet</servlet-name>
        <servlet-class>Controller.DeleteWordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>Controller.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserWordServlet</servlet-name>
        <servlet-class>Controller.TopicWordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestScoreServlet</servlet-name>
        <servlet-class>Controller.TestScoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyWordsServlet</servlet-name>
        <url-pattern>/MyWordsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteWordServlet</servlet-name>
        <url-pattern>/DeleteWordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserWordServlet</servlet-name>
        <url-pattern>/UserWordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestScoreServlet</servlet-name>
        <url-pattern>/TestScoreServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
